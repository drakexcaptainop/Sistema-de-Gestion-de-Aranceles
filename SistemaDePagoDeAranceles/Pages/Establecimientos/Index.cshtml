@page
@model SistemaDePagoDeAranceles.Pages.Establecimientos.IndexModel
@{
    ViewData["Title"] = "Gestión de Establecimientos";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<a asp-page="Create" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Nuevo Establecimiento
</a>

<table class="table table-hover align-middle">
    <thead class="table-primary">
    <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Dirección</th>
        <th>Encargado</th>
        <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Establecimientos)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                <a asp-page="Edit" asp-route-id="@item.Name" class="btn btn-sm btn-outline-warning">Editar</a>
                <a asp-page="Delete" asp-route-id="@item.Name" class="btn btn-sm btn-outline-danger">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>