@page
@model SistemaDePagoDeAranceles.Pages.Categories.CreateModel

@{
    ViewData["Title"] = "Nueva Categor√≠a";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Category.Name" class="form-label"></label>
        <input asp-for="Category.Name" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="Category.Description" class="form-label"></label>
        <input asp-for="Category.Description" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Category.BaseAmount" class="form-label"></label>
        <input asp-for="Category.BaseAmount" class="form-control" type="number" step="0.01" required />
    </div>

    <div class="form-check mb-3">
        <input asp-for="Category.Active" class="form-check-input" />
        <label asp-for="Category.Active" class="form-check-label">Activo</label>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>