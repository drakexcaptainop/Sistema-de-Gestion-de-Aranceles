@page
@model SistemaDePagoDeAranceles.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<a asp-page="Create" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Nuevo Usuario
</a>

<form method="post" asp-page-handler="Search" class="mb-3">
    <div class="input-group">
        <input asp-for="SearchTerm"
               class="form-control"
               placeholder="Buscar por nombre, usuario o email" />
        <button type="submit" class="btn btn-primary">Buscar</button>
        <a asp-page="Index" class="btn btn-secondary">Limpiar</a>
    </div>
</form>

<table class="table table-hover align-middle">
    <thead class="table-primary">
    <tr>
        <th>Usuario</th>
        <th>Nombre Completo</th>
        <th>Email</th>
        <th>Rol</th>
        <th>Estado</th>
        <th>Fecha de Creación</th>
        <th>Acciones</th>
    </tr>
    </thead>
    <tbody>

        @foreach (var user in Model.ResultGetAllUser.Value.Where(u => u.Status))
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.FirstName @user.LastName</td>
                <td>@user.Email</td>
                <td>
                    @if (user.Role == "1")
                    {
                        <span class="badge bg-danger">Admin</span>
                    }
                    else if (user.Role == "2")
                    {
                        <span class="badge bg-info">Contador</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@user.Role</span>
                    }
                </td>
                <td>
                    @if (user.Status)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactivo</span>
                    }
                </td>
                <td>@user.CreatedDate.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@(Model.Protect(user.Id))" class="btn btn-sm btn-outline-warning">Editar</a>
                    <a asp-page="Delete" asp-route-id="@(Model.Protect(user.Id))" class="btn btn-sm btn-outline-danger">Eliminar</a>
                </td>
            </tr>
        }
  
    </tbody>
</table>
