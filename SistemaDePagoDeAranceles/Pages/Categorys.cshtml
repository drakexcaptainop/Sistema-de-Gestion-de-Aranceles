@page
@model SistemaDePagoDeAranceles.Pages.CategorysModel
@{
	<h2>Datos de Categoria</h2>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nombre</th>
				<th>Descripcion</th>
				<th>Monto Base</th>
				<th>Fecha Registro</th>
				<th>Ultima Actualizacion</th>
				<th>Activo</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var category in Model.Categorys)
			{
				<tr>
					<td>@category.Id</td>
					<td>@category.Name</td>
					<td>@category.Description</td>
					<td>@category.BaseAmount.ToString("F2")</td>
					<td>@category.RegisterDate.ToString("dd/MM/yyyy")</td>
					<td>@category.LastUpdate?.ToString("dd/MM/yyyy")</td>
					<td>@(category.Active ? "Activo" : "Inactivo")</td>
				</tr>
			}
		</tbody>
	</table>
}
