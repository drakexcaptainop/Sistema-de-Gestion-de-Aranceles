@page
@model SistemaDePagoDeAranceles.Pages.PersonInCharges.IndexModel
@{
    ViewData["Title"] = "Encargados";
}
<h2>Lista de Encargados</h2>
<hr class="border-top border-2 border-secondary opacity-50 mb-4">
<p>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nuevo Encargado
    </a>
</p>
@if (Model.ResultGetAllPersonInCharge.IsFailure)
{
    <h2>No se encontraron registros</h2>
}
else
{
    <table class="table table-hover align-middle">
        <thead class="table-primary">
            <tr>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Tel√©fono</th>
            <th>CI</th>
            <th>Activo</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var p in Model.ResultGetAllPersonInCharge.Value.Where(p => p.Status))
        {
            <tr>
                <td>@p.FirstName @p.LastName</td>
                <td>@p.Email</td>
                <td>@p.Phone</td>
                <td>@p.Ci</td>
                <td>@(p.Status ? "Si" : "No")</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@(Model.Protect(p.Id))" class="btn btn-sm btn-outline-warning">Editar</a>
                    <a asp-page="Delete" asp-route-id="@(Model.Protect(p.Id))" class="btn btn-sm btn-outline-danger">Eliminar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}