@page
@model SistemaDePagoDeAranceles.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center vh-50 bg-light">
    <div class="card shadow-sm border-0" style="max-width: 420px; width: 100%;">
        <div class="card-body p-4">

            <!-- üîπ T√≠tulo con divisor -->
            <div class="text-center mb-4">
                <img src="~/budget.png" alt="Logo" style="height: 60px;" class="mb-2">
                <h3 class="fw-semibold mb-0 text-primary">Iniciar sesi√≥n</h3>
                <hr class="border-2 border-secondary opacity-25 mt-3 mb-4">
            </div>

            <!-- üîπ Formulario -->
            <form method="post">
                <div class="mb-3">
                    <label class="form-label fw-semibold">Usuario</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-person"></i></span>
                        <input asp-for="Input.Username" class="form-control" placeholder="Ingrese su usuario" />
                    </div>
                    <span asp-validation-for="Input.Username" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Contrase√±a</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-lock"></i></span>
                        <input asp-for="Input.Password" type="password" class="form-control" placeholder="Ingrese su contrase√±a" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">Recordarme</label>
                </div>

                <button class="btn btn-primary w-100 fw-semibold" type="submit">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Ingresar
                </button>
            </form>
        </div>
    </div>
</div>